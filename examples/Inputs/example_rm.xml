<?xml version="1.0" encoding="UTF-8"?>
<simulation>
	<time start="0" end="20" />	<!-- Simulation time -->
    <software>
        <tasks>
        	<!-- A task can be periodic or sporadic. The deadline parameter is relevant only for
        	     real-time tasks -->
            <task real-time="true" type="periodic" id="1" period="20" deadline="50"  wcet="3" />
            <task real-time="true" type="periodic" id="2" period="5" deadline="30" wcet="2" />
            <task real-time="true" type="periodic" id="3" period="10" deadline="50"  wcet="2" />
            <task real-time="false" type="sporadic" id="4" activation="1" wcet="2" />
        </tasks>
        <scheduler algorithm="RM" server="polling" capacity="2" period="5"/>	<!-- add any relevant numbers, such as quantum time for RR -->
    </software>
    <hardware>
    	<cpus>
    		<pe id="0" speed="1" />	<!-- Speed represents the multiplicator for the wcet. For instance
    		                             A task with wcet=10 running of a core with 1.25 speed it takes
    		                              8 time units to execute -->
    	</cpus>
    </hardware>
</simulation>